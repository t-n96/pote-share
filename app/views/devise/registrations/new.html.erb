<div class="login">
  <div class="login__content">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザー名" %> <br />
        <%= f.text_field :name, class:'name' %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'email' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:'password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'password' %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成する", class:'login-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
