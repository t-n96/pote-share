<div class="login">
  <div class="login__content">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'email' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:'password' %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class:'login-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
